<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false" >

    <CheckBox
        android:id="@+id/selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:onClick="onClickCheckBox" />

    <LinearLayout
        android:id="@+id/book_list_data"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/selected"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/book_list_thumb"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:contentDescription="@string/book_thumb"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/book_list_titles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/book_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="@dimen/book_list_title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_list_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/book_list_authors"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray" />

    </LinearLayout>

</RelativeLayout>